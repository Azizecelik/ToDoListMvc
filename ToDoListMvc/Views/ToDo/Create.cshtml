@model ToDoListProject.Models.GorevlerInfo

<h2>Yeni Görev Ekle</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="GorevAdi"></label>
        <input asp-for="GorevAdi" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Aciklama"></label>
        <input asp-for="Aciklama" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Tarih"></label>
        <input type="datetime-local" class="form-control" id="Tarih" name="Tarih"
               value="@Model.Tarih.ToString("yyyy-MM-ddTHH:mm")" />
    </div>
   <br>

    <button type="submit" class="btn btn-primary">Görev Ekle</button>
    <a href="@Url.Action("Index", "ToDo")" class="btn btn-secondary btn-sm">İptal</a>
</form>
